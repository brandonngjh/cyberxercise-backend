ENV=local
LOG_LEVEL=INFO

# Comma-separated list for FastAPI CORS middleware.
# Example: http://localhost:5173,http://localhost:3000
CORS_ORIGINS=http://localhost:5173

# --- Database ---
POSTGRES_DB=cyberxercise
POSTGRES_USER=cyberxercise
POSTGRES_PASSWORD=cyberxercise
POSTGRES_PORT=5432

# Data Source Name (local machine talking to dockerized Postgres)
DATABASE_URL=postgresql+asyncpg://cyberxercise:cyberxercise@localhost:5432/cyberxercise

# DSN for API inside docker-compose
DATABASE_URL_DOCKER=postgresql+asyncpg://cyberxercise:cyberxercise@postgres:5432/cyberxercise

# --- Auth ---
# Instructor JWT signing secret
JWT_SECRET=change-me
JWT_ISSUER=cyberxercise
JWT_AUDIENCE=cyberxercise-api
JWT_ACCESS_TTL_SECONDS=3600

# Dev-only: enable POST /auth/register
ALLOW_INSTRUCTOR_REGISTER=false

# Participant token hashing pepper used for HMAC-SHA256
PARTICIPANT_TOKEN_PEPPER=change-me-too
